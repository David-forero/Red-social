<div class="card">
    <div class="card-header d-flex justify-content-between align-item-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img class="img-fluid" src="/public/upload/{{image.filename}}" alt="{{image.title}}">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between aling-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
            <i class="fa fa-thumbs-up"></i> Like
        </button>
        <p>
            <i class="fa fa-heart"></i>
            <span class="likes-count"> {{image.likes}}</span>
        </p>
        <p>
            <i class="fa fa-eye"></i> {{image.views}}
        </p>
        <p>
            <i class="fa fa-clock-o"></i> {{timeago image.timestamp}}
        </p>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Post a comment
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comments">
            <form action="/images/{{image.uniqueId}}/comment" method="post">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group">
                    <textarea name="comment" class="form-control" placeholder="Your Comment" rows="2"></textarea>
                </div>
                <div class="form-grop">
                    <button class="btn btn-success">
                        Send
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
                <li class="list-group-item">
                    <div class="row">
                        <a href="#" class="col text-center">
                            <img src="http://gravata.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                        </a>
                        <blockquote class="col">
                            <p class="lead">{{comment}}</p>
                            <footer class="blockquote-footer">
                                {{name}} - {{timeago timestamp}}
                            </footer>
                        </blockquote>    
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>